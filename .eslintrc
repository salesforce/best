{
    "extends": "plugin:lwc/recommended",
    "plugins": [
        "lwc"
    ],
    "env": {
        "node": true
    },
    "rules": {
        "raptor/no-inline-disable": 0,
        "eslint-comments/no-use": 0,
        "compat/compat": 0,
        "no-await-in-loop": 0,
        "lwc/no-inline-disable" : 0,
        "no-confusing-arrow": [ "error", {"allowParens": true} ]
    },
    "globals": {
        "benchmark": true,
        "run": true,
        "before": true,
        "after": true,
        "BEST_CONFIG": true
    }
}
