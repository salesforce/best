{
  "name": "@best/frontend",
  "version": "0.5.2",
  "main": "index.js",
  "description": "Best frontend for express",
  "scripts": {
    "clean": "rimraf public/assets/js/main.js",
    "lint": "yarn run eslint",
    "serve": "node serve.js",
    "start": "yarn build:prod && yarn serve",
    "serve:watch": "nodemon --watch public --watch server serve.js",
    "build": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "watch": "concurrently \"yarn run build --watch\" \"yarn run serve:watch\""
  },
  "keywords": [
    "lwc",
    "benchmark",
    "perf",
    "testing"
  ],
  "author": "LWC Team",
  "homepage": "https://github.com/salesforce/best",
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/best"
  },
  "dependencies": {
    "@best/github-integration": "0.5.2",
    "apicache": "^1.2.0",
    "memoizee": "^0.4.11"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "express": "~4.16.2",
    "lwc-compiler": "0.18.0",
    "lwc-engine": "0.18.0",
    "nodemon": "~1.14.12",
    "rimraf": "^2.6.2",
    "rollup": "~0.53.0",
    "rollup-plugin-lwc-compiler": "0.18.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "uglify-es": "3.3.7"
  }
}
